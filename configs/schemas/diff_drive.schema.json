{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "diff_drive_controller params",
  "type": "object",
  "properties": {
    "diff_drive_controller": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": {"type": "string"},
        "left_wheel_names": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },
        "right_wheel_names": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },
        "wheel_separation": {"type": "number", "exclusiveMinimum": 0},
        "wheel_radius": {"type": "number", "exclusiveMinimum": 0},
        "publish_rate": {"type": "integer", "minimum": 1},
        "enable_odom_tf": {"type": "boolean"}
      },
      "required": [
        "left_wheel_names",
        "right_wheel_names",
        "wheel_separation",
        "wheel_radius",
        "publish_rate"
      ]
    }
  },
  "required": ["diff_drive_controller"]
}

